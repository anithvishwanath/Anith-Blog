---
layout: layouts/base.njk
eleventyComputed:
    date: "{{ page.date }}"
---
<article class="post-item">
    <h2 class="post-title-page">{{ title }}</h2>
    <time class="journal-entry-time" datetime="{{ post.date }}"> {{ page.date | fullDate }} by {{ meta.author.name }} </time> 
    {{ content | safe }}
    <a href="/" class="back-btn">← Go back</a>
</article>
