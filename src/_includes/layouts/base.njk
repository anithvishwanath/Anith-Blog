{% include "partials/_header.njk" %}
<div class="blog-sidebar">
    <div class="sidebar-content">
        <div class="sidebar-archive">
            <header class="blog-header" role="banner">
                <h1 class="page-title"><a href="{{ '/' | url }}">{{ meta.title }}</a></h1>
            </header>
            <nav>
                {% for year, yearPosts in collections.postsByYear %}
                    <time class="sidebar-year">{{ year }}</time>
                    {% for post in yearPosts | reverse %}
                        <li><span class="sidebar-time"><a href="/{{ post.fileSlug }}">{{ post.date | readableDate }}</a> </span></li>
                    {% endfor %}
                {% endfor %}
            </nav>
        </div>
